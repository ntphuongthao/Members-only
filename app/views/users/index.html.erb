<h1 class="text-center mt-4">List of all current users</h1>

<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= link_to user.name, user %>
          </div>
          <div class="card-body">
            <%= link_to "View profile", user, class: "btn btn-outline-success" %>

            <% if logged_in? && user == current_user %>
              <%= link_to "Edit profile", user, class: "btn btn-outline-info" %>
              <%= link_to "Delete profile", user, class: "btn btn-outline-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
